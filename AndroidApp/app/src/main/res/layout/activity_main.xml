<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@android:drawable/ic_menu_manage" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Pizza Value Calculator"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Switch
            android:id="@+id/switchAdvanced"
            android:text="Advanced Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/layoutAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioDiameter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="Diameter" />

                <RadioButton
                    android:id="@+id/radioRadius"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Radius" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/inputFractionA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Fraction A"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/inputFractionB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Fraction B"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/resultText"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Container stacking pizzas vertically in portrait -->
        <LinearLayout
            android:id="@+id/pizzaContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Pizza A group -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/pizzaA"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/pizza_shape" />

                <!-- Size A -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size A:  "
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/inputSizeA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter size"
                        android:inputType="numberDecimal"
                        android:textColor="?android:textColorPrimary" />
                </LinearLayout>

                <!-- Price A -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price A:"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/inputPriceA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter price"
                        android:inputType="numberDecimal"
                        android:textColor="?android:textColorPrimary" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pizza B group -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/pizzaB"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/pizza_shape" />

                <!-- Size B -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size B:  "
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/inputSizeB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter size"
                        android:inputType="numberDecimal"
                        android:textColor="?android:textColorPrimary" />
                </LinearLayout>

                <!-- Price B -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price B:"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/inputPriceB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter price"
                        android:inputType="numberDecimal"
                        android:textColor="?android:textColorPrimary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
