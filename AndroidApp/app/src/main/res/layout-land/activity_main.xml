<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pvcBackground">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/hheader" />

    <LinearLayout
        android:id="@+id/paddedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/resultText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="?attr/pvcText"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@null"
                app:srcCompat="@drawable/settings"/>
        </LinearLayout>

    <!-- Container showing pizzas side-by-side in landscape -->
    <LinearLayout
        android:id="@+id/pizzaContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="2">

        <!-- Pizza A group -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/pizzaA"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/pizza_shape" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <!-- Size A -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/textbox">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:width="64dp"
                    android:text="Size A:"
                    android:textColor="?attr/pvcText"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/inputSizeA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Enter size"
                    android:inputType="numberDecimal"
                    android:textColor="?attr/pvcBoxText"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <!-- Price A -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/textbox">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/pvcText"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:width="64dp"
                    android:text="Price A:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/inputPriceA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Enter price"
                    android:inputType="numberDecimal"
                    android:textColor="?attr/pvcBoxText"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Pizza B group -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/pizzaB"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/pizza_shape" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <!-- Size B -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/textbox">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:width="64dp"
                    android:text="Size B:"
                    android:textColor="?attr/pvcText"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/inputSizeB"
                    android:layout_marginEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter size"
                    android:inputType="numberDecimal"
                    android:textColor="?attr/pvcBoxText"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp"/>
            <!-- Price B -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/textbox">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/pvcText"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:width="64dp"
                    android:text="Price B:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/inputPriceB"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter price"
                    android:inputType="numberDecimal"
                    android:textColor="?attr/pvcBoxText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/textbox"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:id="@+id/settingsMenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/settingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textAlignment="center"
                android:textColor="?attr/pvcText"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/settingsExitButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:background="@null"
                app:srcCompat="@drawable/settings"/>
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/pvcBoxBorder"
                android:layout_margin="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Dark Mode"
                    android:textSize="16sp"
                    android:textColor="?attr/pvcText" />

                <Switch
                    android:id="@+id/darkModeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
