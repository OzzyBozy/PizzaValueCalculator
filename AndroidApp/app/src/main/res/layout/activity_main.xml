<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pvcBackground">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/vheader" />

        <LinearLayout
            android:id="@+id/paddedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/pvcText"
            android:textAlignment="center"
            android:textSize="20sp" />

        <!-- Container stacking pizzas vertically in portrait -->
        <LinearLayout
            android:id="@+id/pizzaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Pizza A group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pizzaA"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/pizza_shape" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <!-- Size A -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/textbox">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:width="64dp"
                        android:text="Size A:"
                        android:textColor="?attr/pvcText"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/inputSizeA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Enter size"
                        android:inputType="numberDecimal"
                        android:textColor="?attr/pvcBoxText"/>
                </LinearLayout>


                <!-- Price A -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/textbox">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/pvcText"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:width="64dp"
                        android:text="Price A:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/inputPriceA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Enter price"
                        android:inputType="numberDecimal"
                        android:textColor="?attr/pvcBoxText"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <!-- Pizza B group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pizzaB"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/pizza_shape" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <!-- Size B -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/textbox">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:width="64dp"
                        android:text="Size B:"
                        android:textColor="?attr/pvcText"
                        android:textStyle="bold"
                        android:textSize="16sp" />/>

                    <EditText
                        android:id="@+id/inputSizeB"
                        android:layout_marginEnd="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter size"
                        android:inputType="numberDecimal"
                        android:textColor="?attr/pvcBoxText"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <!-- Price B -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/textbox">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/pvcText"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:width="64dp"
                        android:text="Price B:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/inputPriceB"
                        android:layout_width="0dp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter price"
                        android:inputType="numberDecimal"
                        android:textColor="?attr/pvcBoxText"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
