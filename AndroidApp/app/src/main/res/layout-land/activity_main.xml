<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pvcBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="-4dp"
                android:layout_marginTop="-2dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/pizzavaluecalculator"
                android:scaleType="fitXY"
                android:src="@drawable/hheader" />

            <LinearLayout
                android:id="@+id/paddedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="?attr/pvcText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/settingsButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:contentDescription="@string/settings"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/settings" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pizzaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <ImageView
                            android:id="@+id/pizzaA"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/pizza_shape" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textbox"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/labelSizeA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/size_a"
                                android:textColor="?attr/pvcText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/inputSizeA"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_weight="1"
                                android:hint="@string/enter_size"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="6dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textbox"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/labelPriceA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/price_a"
                                android:textColor="?attr/pvcText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/inputPriceA"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_weight="1"
                                android:hint="@string/enter_price"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:id="@+id/pizzaB"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/pizza_shape" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textbox"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/labelSizeB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/size_b"
                                android:textColor="?attr/pvcText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/inputSizeB"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_weight="1"
                                android:hint="@string/enter_size"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="6dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textbox"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/labelPriceB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/price_b"
                                android:textColor="?attr/pvcText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/inputPriceB"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_weight="1"
                                android:hint="@string/enter_price"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/settingsMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingBottom="4dp"
        android:background="@drawable/textbox"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/settingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/settings"
                    android:textAlignment="center"
                    android:textColor="?attr/pvcBoxText"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/settingsExitButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/settingsexit" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_margin="8dp"
                android:background="?attr/pvcBoxBorder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/themeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dark_mode"
                    android:textColor="?attr/pvcBoxText"
                    android:textSize="16sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/darkModeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="?attr/pvcRedBanner"
                    app:trackTint="?attr/pvcWhiteBanner" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/languageText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/language"
                    android:textColor="?attr/pvcBoxText"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/languageSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbox"
                    android:paddingVertical="4dp"
                    android:paddingStart="2dp"
                    android:popupBackground="?attr/pvcBackground"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/advancedText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/advanced_mode"
                    android:textColor="?attr/pvcBoxText"
                    android:textSize="16sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/advancedSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="?attr/pvcRedBanner"
                    app:trackTint="?attr/pvcWhiteBanner" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/advancedSettingsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/sizeSeekTextA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slices_left_A"
                        android:textColor="?attr/pvcBoxText"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sliceSeekBarAValue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="2dp"
                        android:textColor="?attr/pvcBoxText" />

                    <SeekBar
                        android:id="@+id/sliceSeekBarA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="17"
                        android:progress="17"
                        android:progressTint="?attr/pvcWhiteBanner"
                        android:thumbTint="?attr/pvcRedBanner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/sizeSeekTextB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slices_left_B"
                        android:textColor="?attr/pvcBoxText"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sliceSeekBarBValue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="2dp"
                        android:textColor="?attr/pvcBoxText" />

                    <SeekBar
                        android:id="@+id/sliceSeekBarB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="17"
                        android:progress="17"
                        android:progressTint="?attr/pvcWhiteBanner"
                        android:thumbTint="?attr/pvcRedBanner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <Button
                        android:id="@+id/achievementButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@drawable/textbox"
                        android:paddingHorizontal="8dp"
                        android:text="Achievements" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/achievementSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="?attr/pvcRedBanner"
                        app:trackTint="?attr/pvcWhiteBanner" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/achievementsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:background="@drawable/textbox"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/achievementsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Achievements"
                android:textColor="?attr/pvcBoxText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/achievementsExitButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/settingsexit" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/pvcBoxBorder" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/achievementsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false" />
    </LinearLayout>
</FrameLayout>
