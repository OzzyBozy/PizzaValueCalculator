<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pvcBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="-1dp"
                android:contentDescription="@string/pizzavaluecalculator"
                android:src="@drawable/hheader" />

            <LinearLayout
                android:id="@+id/paddedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="?attr/pvcText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/settingsButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/settings"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        app:srcCompat="@drawable/settings"/>
                </LinearLayout>

                <!-- Pizza A and B Container -->
                <LinearLayout
                    android:id="@+id/pizzaContainer"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:weightSum="2">

                    <!-- Pizza A -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingEnd="8dp">

                        <ImageView
                            android:id="@+id/pizzaA"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/pizza_shape" />

                        <Space android:layout_width="match_parent" android:layout_height="8dp" />

                        <!-- Size A -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/textbox">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:width="80dp"
                                android:text="@string/size_a"
                                android:textColor="?attr/pvcText"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/inputSizeA"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="@string/enter_size"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText"/>
                        </LinearLayout>

                        <Space android:layout_width="match_parent" android:layout_height="6dp" />

                        <!-- Price A -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/textbox">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:width="80dp"
                                android:text="@string/price_a"
                                android:textColor="?attr/pvcText"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/inputPriceA"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="@string/enter_price"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Pizza B -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:id="@+id/pizzaB"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/pizza_shape" />

                        <Space android:layout_width="match_parent" android:layout_height="8dp" />

                        <!-- Size B -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/textbox">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:width="80dp"
                                android:text="@string/size_b"
                                android:textColor="?attr/pvcText"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/inputSizeB"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="@string/enter_size"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText"/>
                        </LinearLayout>

                        <Space android:layout_width="match_parent" android:layout_height="6dp"/>

                        <!-- Price B -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/textbox">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/pvcText"
                                android:textStyle="bold"
                                android:layout_marginStart="10dp"
                                android:width="80dp"
                                android:text="@string/price_b"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/inputPriceB"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="@string/enter_price"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/pvcBoxText"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Settings menu overlay -->
    <ScrollView
        android:id="@+id/settingsMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/textbox"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/settingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textAlignment="center"
                    android:textColor="?attr/pvcText"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <ImageButton
                    android:id="@+id/settingsExitButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    app:srcCompat="@drawable/settingsexit"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/pvcBoxBorder"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/themeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dark_mode"
                    android:textSize="16sp"
                    android:textColor="?attr/pvcBoxText" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/darkModeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="?attr/pvcBoxBorder"
                    app:trackTint="?attr/pvcBackground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/languageText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/language"
                    android:textSize="16sp"
                    android:textColor="?attr/pvcBoxText" />

                <Spinner
                    android:id="@+id/languageSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:popupBackground="?attr/pvcBackground"
                    android:background="@drawable/textbox"
                    android:paddingVertical="4dp"
                    android:paddingStart="2dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
