<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="48dp"
                android:height="48dp" />
            <solid android:color="#D84315" />
            <stroke
                android:width="4dp"
                android:color="#FFE082" />
        </shape>
    </item>
    <item
        android:width="36dp"
        android:height="36dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#FFCA28" />
        </shape>
    </item>
    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="center"
        android:left="-10dp"
        android:top="-10dp">
        <shape android:shape="oval">
            <solid android:color="#A13C2F" />
        </shape>
    </item>
    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="center"
        android:left="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <solid android:color="#A13C2F" />
        </shape>
    </item>
</layer-list>