<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="48dp"
                android:height="48dp" />
            <solid android:color="#D84315" />
            <stroke
                android:width="4dp"
                android:color="#FFE082" />
        </shape>
    </item>

    <item
        android:width="36dp"
        android:height="36dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#FFCA28" />
        </shape>
    </item>

    <item
        android:width="6dp"
        android:height="6dp"
        android:gravity="top|left"
        android:top="12dp"
        android:left="12dp">
        <shape android:shape="oval">
            <solid android:color="#D32F2F" />
        </shape>
    </item>

    <item
        android:width="6dp"
        android:height="6dp"
        android:gravity="top|right"
        android:top="12dp"
        android:right="12dp">
        <shape android:shape="oval">
            <solid android:color="#8E24AA" />
        </shape>
    </item>

    <item
        android:width="6dp"
        android:height="6dp"
        android:gravity="top|center_horizontal"
        android:top="8.5dp">
        <shape android:shape="oval">
            <solid android:color="#2962FF" />
        </shape>
    </item>

    <item
        android:width="6dp"
        android:height="6dp"
        android:gravity="center_vertical|right"
        android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#388E3C" />
        </shape>
    </item>

    <item
        android:width="6dp"
        android:height="6dp"
        android:gravity="center_vertical|left"
        android:left="8dp">
        <shape android:shape="oval">
            <solid android:color="#F57C00" />
        </shape>
    </item>

    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="bottom|center_horizontal"
        android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#FFEB3B" />
        </shape>
    </item>

</layer-list>
